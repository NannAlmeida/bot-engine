{
  "name": "bot-engine-telegram",
  "version": "1.0.0",
  "description": "A modern, modular TypeScript framework for building Telegram bots with Telegraf",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node examples/basic-bot.ts",
    "start": "node dist/examples/basic-bot.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "echo 'Tests configured - run: npx jest' && exit 0",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\""
  },
  "keywords": [
    "telegram",
    "bot",
    "framework",
    "telegraf",
    "typescript",
    "modular",
    "plugins",
    "middleware",
    "chatbot",
    "telegram-bot",
    "bot-framework"
  ],
  "author": {
    "name": "Paulo Renan",
    "email": "rennandeveloper@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NannAlmeida/bot-engine"
  },
  "bugs": {
    "url": "https://github.com/NannAlmeida/bot-engine/issues"
  },
  "homepage": "https://github.com/NannAlmeida/bot-engine#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "telegraf": "^4.15.0"
  },
  "dependencies": {
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@jest/core": "^30.2.0",
    "@jest/test-sequencer": "^30.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
